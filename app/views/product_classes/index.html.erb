<h1>Listing product_classes</h1>

<%= form_tag("/", :method => "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_classes.each do |product_class| %>
  <tr>
    <td><%= product_class.code %></td>
    <td><%= product_class.name %></td>
    <td><%= link_to 'Show', product_class %></td>
    <td><%= link_to 'Edit', edit_product_class_path(product_class) %></td>
    <td><%= link_to 'Destroy', product_class, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @product_classes %>

<%= link_to 'New Product class', new_product_class_path %>
